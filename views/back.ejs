<!DOCTYPE html>
<html lang="zh">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="format-detection" content="telephone=no">
    <title>百度后台</title>
    <link href="./css/bootstrap.min.css" rel="stylesheet">
    <link href="./css/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <link href="./css/baidunews.css" rel="stylesheet">
    <link href="./css/font-awesome.min.css" rel="stylesheet">
</head>

<body>
    <div id="wrapper">
        <!-- 标题栏 -->
        <nav class="navbar navbar-default navbar-fixed-top titlenav" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">百度后台</a>
            </div>
            <ul class="nav navbar-right top-nav">
                <!-- 信息栏 -->
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-envelope"></i> <b class="caret"></b></a>
                    <ul class="dropdown-menu message-dropdown">
                        <li class="message-preview">
                            <a href="#">
                                <div class="media">
                                </div>
                            </a>
                        </li>
                        <li class="message-footer">
                            <a href="#">0条新信息</a>
                        </li>
                    </ul>
                </li>
                <!-- 信息栏结束 -->
                <!-- 用户信息栏 -->
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> 用户名 <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#"><i class="fa fa-fw fa-user"></i> 账号管理 </a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> 消息中心 </a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i> 设置 </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-power-off"></i> 登出 </a>
                        </li>
                    </ul>
                </li>
                <!-- 用户信息栏结束 -->
            </ul>
            <!-- 边栏列表 -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="active">
                        <a href="javascript:;" data-toggle="collapse" data-target="#demo"> 新闻列表 <i class="fa fa-fw fa-caret-down"></i>
                        </a>
                        <ul id="demo" class="collapse">
                            <li>
                                <a href="#">推荐新闻</a>
                            </li>
                            <li>
                                <a href="#">百家新闻</a>
                            </li>
                            <li>
                                <a href="#">本地新闻</a>
                            </li>
                            <li>
                                <a href="#">娱乐新闻</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- 边栏列表结束 -->
        </nav>
        <!-- 标题栏结束 -->
        <!-- 中间表格 -->
        <div id="page-wrapper">
            <div class="col-sm-12 col-md-12 col-lg-12 main">
                <h4>百度新闻后台</h4><h4 class="newsstyle"></h4>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>新闻标题</th>
                                <th>图片地址</th>
                                <th>新闻内容</th>
                                <th>日期</th>
                                <th>操作
                                    <button type="button" class="btn btn-success btn-xs " id="newbtn">新增</button>
                                </th>
                            </tr>
                        </thead>
                        <tbody> 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- 中间表格结束 -->
        <!-- 新增弹出框 -->
        <div id="newfrom">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 form">
                <h4>新增新闻</h4>
                <form>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="glyphicon input-group-addon" id="basic-addon1">新闻标题</span>
                            <input type="text" class="form-control" id="newstitle" placeholder="新闻标题" value="" aria-describedby="basic-addon1" required="required" autofocus="autofocus">
                        </div>
                        <div class="input-group">
                            <span class="glyphicon input-group-addon" id="basic-addon1">图片地址</span>
                            <input type="text" class="form-control" id="newsimg" value="" placeholder="图片地址" aria-describedby="basic-addon1" required="required" autofocus="autofocus">
                        </div>
                        <div class="input-group">
                            <span class="glyphicon input-group-addon" id="basic-addon1">新闻内容</span>
                            <textarea type="text" class="form-control" id="newscontent" value="" placeholder="新闻内容" aria-describedby="basic-addon1" style="height: 200px;" required="required" autofocus="autofocus"></textarea>
                        </div>
                        <div class="input-group date form_date col-md-5" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                            <span class="glyphicon input-group-addon" id="basic-addon1">日期</span>
                            <input type="text" class="form-control" value="" readonly="" id="addtime" required="required">
                        </div>
                    </div>
                    <button type="button" class="btn btn-success" id="send">提交</button>
                    <button type="reset" class="btn btn-default">重置</button>
                    <button type="button" class="close"><span class="glyphicon glyphicon-remove"></span></span></button>
                    <p class="callback"></p>
                </form>
            </div>
        </div>
        <div id="revisefrom">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4 form">
                <h4>修改新闻 序号<span id="newsid-revise"></span></h4>
                <form>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="glyphicon input-group-addon" id="basic-addon1">新闻标题</span>
                            <input type="text" class="form-control" id="newstitle-revise" placeholder="新闻标题" value="" aria-describedby="basic-addon1" required="required" autofocus="autofocus">
                        </div>
                        <div class="input-group">
                            <span class="glyphicon input-group-addon" id="basic-addon1">图片地址</span>
                            <input type="text" class="form-control" id="newsimg-revise" value="" placeholder="图片地址" aria-describedby="basic-addon1" required="required" autofocus="autofocus">
                        </div>
                        <div class="input-group">
                            <span class="glyphicon input-group-addon" id="basic-addon1">新闻内容</span>
                            <textarea type="text" class="form-control" id="newscontent-revise" value="" placeholder="新闻内容" aria-describedby="basic-addon1" style="height: 200px;" required="required" autofocus="autofocus"></textarea>
                        </div>
                        <div class="input-group date form_date col-md-5" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                            <span class="glyphicon input-group-addon" id="basic-addon1">日期</span>
                            <input type="text" class="form-control" value="" required="required" readonly="" id="addtime-revise">
                        </div>
                    </div>
                    <button type="button" class="btn btn-success" id="send-revise">提交</button>
                    <button type="reset" class="btn btn-default">重置</button>
                    <button type="button" class="close"><span class="glyphicon glyphicon-remove"></span></span></button>
                    <p class="callback"></p>
                </form>
            </div>
        </div>
    </div>
    <script src="./js/bass/jquery-2.2.3.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>
    <script src="./js/bootstrap-datetimepicker.js"></script>
    <script src="./js/bootstrap-datetimepicker.fr.js"></script>
    <script src="./js/news-back.js"></script>
</body>

</html>
